class Ordre

{
    public void PlaceOrder()
    {
        Console.Clear();
        Console.WriteLine("Angiv Order\n");
        Console.WriteLine("Ordre er succesfuld!");
    }

    public void ViewMenu()
    {
        Console.Clear();
        Console.WriteLine("Pizza Menu\n");
        Console.WriteLine("Press Enter to return to the Main Menu...");
    }
}

class Pizza
{
    public string Name { get; set; }
    public decimal Price { get; set; }

    public Pizza(string name, decimal price)
    {
        Name = name;
        Price = price;
    }

    public override string ToString()
    {
        return $"{Name} - {Price} 40 kr";
    }
}



// Create pizzas for the menu
var fck pizza = new Pizza("Fck", "kebab, salat, tomat, agurk", 70,);
var pepperoni = new Pizza("Pepperoni", "Pepperoni, ost, dressing", 80,);
var ananas pizza = new Pizza("kebab, ananas, svinekæd, dressing", 90,);

// menu
var menu = new Menu(new List<Pizza> { FCK Pizza, pepperoni, ananas pizza });

// sælger
var sælger = new Seller("Big Mamma Pizzeria", pepperoni);

// ordre
var order = PlaceOrder(new List<Pizza> { fck pizza, pepperoni });

// Display order details
Console.WriteLine(order);


